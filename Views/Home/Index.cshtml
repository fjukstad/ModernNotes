@{
    ViewData["Title"] = "Modern Notes";
}
<div class="card">
  <div class="card-body">
    <h5 class="card-title">Compose a new note</h5>
    <form>
    <div class="form-group">
        <input class="form-control" id="title" placeholder="Enter a title.">
    </div>
    <div class="form-group">
        <textarea class="form-control" id="content" rows="5" placeholder="Type in your note."></textarea>
    </div>
    <button type="submit" class="btn btn-outline-primary mb-2 pull-right">Save note</button>
  </div>
</div>